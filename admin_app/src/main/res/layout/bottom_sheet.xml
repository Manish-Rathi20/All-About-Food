<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNeedyPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars"/>

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNeedyPhoto"
                app:layout_constraintStart_toStartOf="@+id/imgNeedyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/imgNeedyPhoto" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="Shivam Apartment"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNeedyPhoto"
                app:layout_constraintStart_toStartOf="@+id/imgNeedyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/imgNeedyPhoto" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="There is somtheing"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNeedyPhoto"
                app:layout_constraintStart_toStartOf="@+id/imgNeedyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/imgNeedyPhoto" />

            <TextView
                android:id="@+id/txtCreatedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="20rathimanish"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNeedyPhoto"
                app:layout_constraintStart_toStartOf="@+id/imgNeedyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/imgNeedyPhoto" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

